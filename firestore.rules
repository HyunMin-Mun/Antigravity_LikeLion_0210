rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 인증된 사용자만 접근 가능
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /workItems/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /proposals/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // AI 학습 방향성 - 인증된 사용자 누구나 읽기 가능, 쓰기도 허용 (앱에서 매니저만 UI 접근)
    match /ai_directives/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
